<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab4"
    style="@style/tabBG">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/profTitle"
        android:text="Profile"
        style="@style/titleStyle"/>

    <ImageButton
        android:id="@+id/profButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/emote" />

    <TextView
        android:id="@+id/profName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Some Person"
        android:layout_below="@+id/profButton"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/warningTxt"
        android:layout_height="40sp"
        android:layout_width="match_parent"
        android:background="@color/red"
        android:text="   WARNING! Don't touch profile!"
        android:layout_below="@+id/profName"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/closeButton"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_alignRight="@+id/warningTxt"
        android:layout_alignBottom="@+id/warningTxt"
        android:text="X"
        android:background="@android:color/transparent"/>

</RelativeLayout>